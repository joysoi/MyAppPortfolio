<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nikola.myappportfolio.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_1"
        android:text="My Nanodegree Apps!"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/btn_1"
        android:text="SPOTIFY STREAMER"
        android:textSize="10sp"
        android:layout_below="@+id/txt_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorText"
        android:background="@color/colorButton"
        android:onClick="toast_event1"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/btn_2"
        android:text="SCORES APP"
        android:textSize="10sp"
        android:layout_below="@+id/btn_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorText"
        android:background="@color/colorButton"
        android:onClick="toast_event2"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/btn_3"
        android:text="LIBRARY APP"
        android:textSize="10sp"
        android:layout_below="@+id/btn_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorText"
        android:background="@color/colorButton"
        android:onClick="toast_event3"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/btn_4"
        android:text="BUILD IN BIGGER"
        android:textSize="10sp"
        android:layout_below="@+id/btn_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorText"
        android:background="@color/colorButton"
        android:onClick="toast_event4"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/btn_5"
        android:text="XYZ READER"
        android:textSize="10sp"
        android:layout_below="@+id/btn_4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorText"
        android:background="@color/colorButton"
        android:onClick="toast_event5"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/btn_6"
        android:text="CAPSTONE: MY OWN APP"
        android:textSize="10sp"
        android:layout_below="@+id/btn_5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorText"
        android:background="@color/colorButtonRed"
        android:onClick="toast_event6"/>
</RelativeLayout>
